<Page x:Class="WpfApp.Views.BuyerWPFPages.ShowMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views.BuyerWPFPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowMenuPage">

    <Grid>

        <TextBlock Text="Panel Klienta" Style="{StaticResource Title}"/>
        <Button x:Name="AccountButton" Height="50" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Click="AccountButton_Click">
            <Image Source="/Images/profil-icon.png" Width="50" Height="50"></Image>
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Wyloguj się" Click="logout_menu_item_click"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Name="show_all_products_button" Content="1. Zobacz listę naszych produktów" Tag="1" Click="menu_button_click"/>
            <Button Name="show_user_cart_button" Content="2. Zobacz swój koszyk" Tag="2" Click="menu_button_click"/>
            <Button Name="show_payement_method" Content="3. Zapłać za zakupy"  Tag="3" Click="menu_button_click"/>
            <Button Name="show_shopping_history_button" Content="4. Pokaż historię zakupów" Tag="4" Click="menu_button_click"/>
            <Button Name="exit_button" Content="5. Wyjdź z Aplikacji" Tag="5" Click="menu_button_click"/>
            <!--<Button Name="logout_button" Content="6. Wyloguj się" Click="logout_button_Click"></Button>-->
        </StackPanel>
    </Grid>
</Page>
